{
  "bracketSpacing": true,
  "semi": true,
  "singleQuote": true,
  "bracketSameLine": true,
  "tabWidth": 2,
  "trailingComma": "all",
  "overrides": [{ "files": "*.svelte", "options": { "parser": "svelte" } }],
  "plugins": [
    "prettier-plugin-svelte",
    "prettier-plugin-organize-imports",
    "prettier-plugin-tailwindcss"
  ],
  "organizeImportsSkipDestructiveCodeActions": true
}
